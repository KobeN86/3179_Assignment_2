{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Cheapest European Cities" },
  "width": 500,
  "height": 300,
  "data": {
  "url": "https://raw.githubusercontent.com/KobeN86/3179_Assignment_2/blob/main/Filtered_data.csv"
  },

  "mark": "bar",
  "encoding": {
    "x": { 
      "field": "daily_cost", 
      "type": "quantitative",
      "title": "Daily Cost (USD)"
    },
    "y": { 
      "field": "city", 
      "type": "nominal",
      "title": "City",
      "sort": {"field": "daily_cost", "order": "ascending"}
    }
  }
}