{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "CO₂ Emissions Per Country (1960–2024)"},
  "width": 800,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/KobeN86/W10HomeWork/main/data/annual-co2-emissions-per-country.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": "datum.Year >= 1960"},
    {
      "filter": "datum.Entity == 'Australia' || datum.Entity == 'China' || datum.Entity == 'India' || datum.Entity == 'United States' || datum.Entity == 'United Kingdom' || datum.Entity == 'Germany' || datum.Entity == 'Brazil'"
    }
  ],
  "mark": {"type": "bar"},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": "Year",
      "axis": {"labelAngle": -45}
    },
    "y": {
      "field": "Emmisions",
      "type": "quantitative",
      "title": "CO₂ Emissions (Trillions of tonnes)",
      "stack": "zero"
    },
    "color": {
      "field": "Entity",
      "type": "nominal",
      "title": "Country",
      "scale": {"scheme": "darkblue"}
    },
    "tooltip": [
      {"field": "Entity", "type": "nominal", "title": "Country"},
      {"field": "Year", "type": "temporal", "title": "Year", "format": "%Y"},
      {"field": "Emmisions", "type": "quantitative", "title": "CO₂ Emissions (tonnes)", "format": ",.0f"}
    ]
  }
}
